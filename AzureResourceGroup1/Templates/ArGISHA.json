{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "This is the name of the Virtual Network"
      }

    },
     "virtualNetworkResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "This is the name of the Virtual Network"
      }

    },
    "newStorageAccountName": {
      "type": "string",
      "metadata": {
        "description": "This is the name of the Storage account"
      }
    },
    "proxyDNSPrefix": {
      "type": "string",
      "metadata": {
        "Description": "The DNS Prefix for the proxy Public IP Address"
      }
    },
    "DataServersName": {
      "type": "string",
      "metadata": {
        "description": "This is the prefix name for the Data servers VMs"
      }
    },
    "AdminUserName": {
      "type": "string",
      "metadata": {
        "description": "This is the Admin name for the Data servers VMs"
      }
    },
    "AdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "This is the Admin password for the Data servers VMs"
      }
    },
    "DataServersWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ],
      "metadata": {
        "description": "This is the Windows OS version for the Data servers VMs"
      }
    },
    "ServersName": {
      "type": "string",
      "metadata": {
        "description": "This is the prefix name for servers VMs"
      }
    },
    "ServersWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ],
      "metadata": {
        "description": "This is the Windows OS version for the servers VMs"
      }
    },
    "PortalServersName": {
      "type": "string",
      "metadata": {
        "description": "This is the prefix name for Portal servers VMs"
      }
    },
    "PortalServersWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ],
      "metadata": {
        "description": "This is the Windows OS version for the Portal servers VMs"
      }
    },
    "ProxyServersName": {
      "type": "string",
      "metadata": {
        "description": "This is the prefix name for Proxy servers VMs"
      }
    },
    "ProxyServersWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ],
      "metadata": {
        "description": "This is the Windows OS version for the Proxy servers VMs"
      }
    },
       "FileServersName": {
      "type": "string",
      "metadata": {
        "description": "This is the prefix name for Proxy servers VMs"
      }
    },
    "FileServersWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ],
      "metadata": {
        "description": "This is the Windows OS version for the Proxy servers VMs"
      }
    },

    "RDPPort":{
			"type":"int",
			"metadata": {
				"Description": "The public RDP port for the VM"
			},
			"defaultValue":3389
		}

  },
  "variables": {
    "storageAccountType": "Standard_LRS",
    "publicIPID": "[resourceId('Microsoft.Network/publicIPAddresses','proxypublicIP')]",
    "numberOfInstances": 2,
    "numberOfServerInstances": 2,
    "numberOfFileServerInstances": 1,
    "DatalbID": "[resourceId('Microsoft.Network/loadBalancers','ArGISDataLB')]",
    "ServerlbID": "[resourceId('Microsoft.Network/loadBalancers','ArGISServerLB')]",
    "PortalServerlbID": "[resourceId('Microsoft.Network/loadBalancers','ArGISPortalLB')]",
    "ProxyServerlbID": "[resourceId('Microsoft.Network/loadBalancers','ArGISProxyLB')]",
    "ArGISDataServersImagePublisher": "MicrosoftWindowsServer",
    "ArGISDataServersImageOffer": "WindowsServer",
    "ArGISDataServersOSDiskName": "DataServersOSDisk",
    "ArGISDataServersVmSize": "Standard_D1",
    "ArGISDataServersVnetID": "[resourceId(parameters('virtualNetworkResourceGroup'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "ArGISDataServersSubnetRef": "[concat(variables('vnetID'), '/subnets/', 'datasubnet')]",
    "ArGISDataServersStorageAccountContainerName": "vhds",
    "ArGISFileServersImagePublisher": "MicrosoftWindowsServer",
    "ArGISFileServersImageOffer": "WindowsServer",
    "ArGISFileServersOSDiskName": "FileServersOSDisk",
    "ArGISFileServersVmSize": "Standard_D1",
    "ArGISFileServersVnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "ArGISFileServersSubnetRef": "[concat(variables('vnetID'), '/subnets/', 'datasubnet')]",
    "ArGISFileServersStorageAccountContainerName": "vhds",
    "ArGISServersImagePublisher": "MicrosoftWindowsServer",
    "ArGISServersImageOffer": "WindowsServer",
    "ArGISServersOSDiskName": "ServersOSDisk",
    "ArGISServersVmSize": "Standard_D1",
    "ArGISServersVnetID": "[resourceId(parameters('virtualNetworkResourceGroup'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "ArGISServersSubnetRef": "[concat(variables('vnetID'), '/subnets/', 'serversubnet')]",
    "vnetID": "[resourceId(parameters('virtualNetworkResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnet1Ref": "[concat(variables('vnetID'),'/subnets/', 'serversubnet')]",

    "ArGISServersStorageAccountContainerName": "vhds",
    "ArGISPortalServersImagePublisher": "MicrosoftWindowsServer",
    "ArGISPortalServersImageOffer": "WindowsServer",
    "ArGISPortalServersOSDiskName": "PortalServersOSDisk",
    "ArGISPortalServersVmSize": "Standard_D1",
    "ArGISPortalServersStorageAccountContainerName": "vhds",
    "ArGISProxyServersImagePublisher": "MicrosoftWindowsServer",
    "ArGISProxyServersImageOffer": "WindowsServer",
    "ArGISProxyServersOSDiskName": "ProxyServersOSDisk",
    "ArGISProxyServersVmSize": "Standard_D1",
    "ArGISProxyServersStorageAccountContainerName": "vhds",
    "customScriptExtensionVersion": "1.2",
    "scriptURL": "http://luigiscripts.blob.core.windows.net/esri/Config.ps1",
    "scriptName": "Config.ps1",
    "scriptArgs": "[concat('-virtualNetworkName ',parameters('virtualNetworkName'),' -newStorageAccountName ',parameters('newStorageAccountName'),' -proxyDNSPrefix ',parameters('proxyDNSPrefix'),' -DataServersName ', parameters('DataServersName'), ' -AdminUserName ', parameters('AdminUserName'), ' -AdminPassword ', parameters('AdminPassword'), ' -DataServersWindowsOSVersion ', parameters('DataServersWindowsOSVersion'), ' -ServersName ', parameters('ServersName'), ' -ServersWindowsOSVersion ', parameters('ServersWindowsOSVersion'), ' -PortalServersName ', parameters('PortalServersName'), ' -ProxyServersWindowsOSVersion ', parameters('ProxyServersWindowsOSVersion'), ' -PortalServersWindowsOSVersion ', parameters('PortalServersWindowsOSVersion'), ' -ProxyServersName ', parameters('ProxyServersName'))]",
    "adlbID":"[resourceId('Microsoft.Network/loadBalancers','ArGISProxyLB')]",
		"adlbFEConfigID":"[concat(variables('adlbID'),'/frontendIPConfigurations/','ArGISProxyLB')]"

  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "proxypublicIP",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('proxyDNSPrefix')]"
        }
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/loadBalancers",
      "name": "ArGISDataLB",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "ArGISDataLB"
      },
      "properties": {
        "frontendIpConfigurations": [
          {

            "properties": {
              "subnet": {
                "Id": "[variables('ArGISServersSubnetRef')]"
              }
              
            },
            "name": "LoadBalancerFrontend"
          }
        ],
        "backendAddressPools": [
          {
            "name": "BackendPool1"
          }
        ],
        "loadBalancingRules": [
          {
            "properties": {
              "frontendIPConfiguration": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISDataLB'), '/frontendIpConfigurations/LoadBalancerFrontend')]"
              },
              "backendAddressPool": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISDataLB'), '/backendAddressPools/BackendPool1')]"
              },
              "probe": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISDataLB'), '/probes/lbprobe')]"
              },
              "protocol": "Tcp",
              "frontendPort": 2443,
              "backendPort": 2443,
              "idleTimeoutInMinutes": 15

            },
            "Name": "lbrule1"
          },
          {
            "properties": {
              "frontendIPConfiguration": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISDataLB'), '/frontendIpConfigurations/LoadBalancerFrontend')]"
              },
              "backendAddressPool": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISDataLB'), '/backendAddressPools/BackendPool1')]"
              },
              "probe": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISDataLB'), '/probes/lbprobe2')]"
              },
              "protocol": "Tcp",
              "frontendPort": 9876,
              "backendPort": 9876,
              "idleTimeoutInMinutes": 15

            },
            "Name": "lbrule2"
          }
        ],
        "probes": [
          {
            "properties": {
              "protocol": "Tcp",
              "port": 2443,
              "intervalInSeconds": 15,
              "numberOfProbes": 2
            },
            "name": "lbprobe"
          },
          {
            "properties": {
              "protocol": "Tcp",
              "port": 9876,
              "intervalInSeconds": 15,
              "numberOfProbes": 2
            },
            "name": "lbprobe2"
          }

        ]
      }
    },

    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/loadBalancers",
      "name": "ArGISServerLB",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "ArGISServerLB"
      },
      "properties": {
        "frontendIpConfigurations": [
          {

            "properties": {
              "subnet": {
                "Id": "[variables('ArGISServersSubnetRef')]"
              }
              
            },
            "name": "LoadBalancerFrontend"
          }
        ],
        "backendAddressPools": [
          {
            "name": "BackendPool1"
          }
        ],
        "loadBalancingRules": [
          {
            "properties": {
              "frontendIPConfiguration": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISServerLB'), '/frontendIpConfigurations/LoadBalancerFrontend')]"
              },
              "backendAddressPool": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISServerLB'), '/backendAddressPools/BackendPool1')]"
              },
              "probe": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISServerLB'), '/probes/lbprobe')]"
              },
              "protocol": "Tcp",
              "frontendPort": 6080,
              "backendPort": 6080,
              "idleTimeoutInMinutes": 15

            },
            "Name": "lbrule1"
          },
          {
            "properties": {
              "frontendIPConfiguration": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISServerLB'), '/frontendIpConfigurations/LoadBalancerFrontend')]"
              },
              "backendAddressPool": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISServerLB'), '/backendAddressPools/BackendPool1')]"
              },
              "probe": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISServerLB'), '/probes/lbprobe2')]"
              },
              "protocol": "Tcp",
              "frontendPort": 6443,
              "backendPort": 6443,
              "idleTimeoutInMinutes": 15

            },
            "Name": "lbrule2"
          }
        ],
        "probes": [
          {
            "properties": {
              "protocol": "Tcp",
              "port": 6080,
              "intervalInSeconds": 15,
              "numberOfProbes": 2
            },
            "name": "lbprobe"
          },
          {
            "properties": {
              "protocol": "Tcp",
              "port": 6443,
              "intervalInSeconds": 15,
              "numberOfProbes": 2
            },
            "name": "lbprobe2"
          }
        ]
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/loadBalancers",
      "name": "ArGISPortalLB",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "ArGISPortalLB"
      },
      "properties": {
        "frontendIpConfigurations": [
          {

            "properties": {
              "subnet": {
                "Id": "[variables('ArGISServersSubnetRef')]"
              }
              
            },
            "name": "LoadBalancerFrontend"
          }
        ],
        "backendAddressPools": [
          {
            "name": "BackendPool1"
          }
        ],
        "loadBalancingRules": [
          {
            "properties": {
              "frontendIPConfiguration": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISPortalLB'), '/frontendIpConfigurations/LoadBalancerFrontend')]"
              },
              "backendAddressPool": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISPortalLB'), '/backendAddressPools/BackendPool1')]"
              },
              "probe": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISPortalLB'), '/probes/lbprobe')]"
              },
              "protocol": "Tcp",
              "frontendPort": 7080,
              "backendPort": 7080,
              "idleTimeoutInMinutes": 15

            },
            "Name": "lbrule1"
          },
          {
            "properties": {
              "frontendIPConfiguration": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISPortalLB'), '/frontendIpConfigurations/LoadBalancerFrontend')]"
              },
              "backendAddressPool": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISPortalLB'), '/backendAddressPools/BackendPool1')]"
              },
              "probe": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISPortalLB'), '/probes/lbprobe2')]"
              },
              "protocol": "Tcp",
              "frontendPort": 7443,
              "backendPort": 7443,
              "idleTimeoutInMinutes": 15

            },
            "Name": "lbrule2"
          }
        ],
        "probes": [
          {
            "properties": {
              "protocol": "Tcp",
              "port": 7080,
              "intervalInSeconds": 15,
              "numberOfProbes": 2
            },
            "name": "lbprobe"
          },
          {
            "properties": {
              "protocol": "Tcp",
              "port": 7443,
              "intervalInSeconds": 15,
              "numberOfProbes": 2
            },
            "name": "lbprobe2"
          }
        ]
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/loadBalancers",
      "name": "ArGISProxyLB",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "ArGISProxyLB"
      },
      "dependsOn": [
        "[variables('publicIPID')]"
      ],
      "properties": {
        "frontendIpConfigurations": [
          {

            "properties": {
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses','proxypublicIP')]"
              }

            },
            "name": "LoadBalancerFrontend"
          }
        ],
        "backendAddressPools": [
          {
            "name": "BackendPool1"
          }
        ],
        "inboundNatRules": [
					{
						"name": "RDPNAT",
						"properties": {
							"frontendIPConfiguration": {
								"id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISProxyLB'), '/frontendIpConfigurations/LoadBalancerFrontend')]"
							},
							"protocol": "tcp",
							"frontendPort": "[parameters('RDPPort')]",
							"backendPort": 3389,
							"enableFloatingIP": false
						}
					}
				],

        "loadBalancingRules": [
          {
            "properties": {
              "frontendIPConfiguration": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISProxyLB'), '/frontendIpConfigurations/LoadBalancerFrontend')]"
              },
              "backendAddressPool": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISProxyLB'), '/backendAddressPools/BackendPool1')]"
              },
              "probe": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISProxyLB'), '/probes/lbprobe')]"
              },
              "protocol": "Tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "idleTimeoutInMinutes": 15

            },
            "Name": "lbrule1"
          },
          {
            "properties": {
              "frontendIPConfiguration": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISProxyLB'), '/frontendIpConfigurations/LoadBalancerFrontend')]"
              },
              "backendAddressPool": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISProxyLB'), '/backendAddressPools/BackendPool1')]"
              },
              "probe": {
                "Id": "[concat(resourceId('Microsoft.Network/loadBalancers', 'ArGISProxyLB'), '/probes/lbprobe2')]"
              },
              "protocol": "Tcp",
              "frontendPort": 443,
              "backendPort": 443,
              "idleTimeoutInMinutes": 15

            },
            "Name": "lbrule2"
          }
        ],
        "probes": [
          {
            "properties": {
              "protocol": "Tcp",
              "port": 80,
              "intervalInSeconds": 15,
              "numberOfProbes": 2
            },
            "name": "lbprobe"
          },
          {
            "properties": {
              "protocol": "Tcp",
              "port": 443,
              "intervalInSeconds": 15,
              "numberOfProbes": 2
            },
            "name": "lbprobe2"
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('DataServersName'), copyindex())]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[variables('numberOfInstances')]"
      },
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-05-01-preview",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', 'DataNic', copyindex())]",
        "[concat('Microsoft.Compute/availabilitySets/', 'ArGISDataAS')]"
      ],
      "tags": {
        "displayName": "ArGISDataServers"
      },
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets','ArGISDataAS')]"
        },
        "hardwareProfile": {
          "vmSize": "[variables('ArGISDataServersVmSize')]"
        },
        "osProfile": {
          "computername": "[concat(parameters('DataServersName'), copyIndex())]",
          "adminUsername": "[parameters('AdminUsername')]",
          "adminPassword": "[parameters('AdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('ArGISDataServersImagePublisher')]",
            "offer": "[variables('ArGISDataServersImageOffer')]",
            "sku": "[parameters('DataServersWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat('ArGISDataServersOSDisk',copyIndex())]",
            "vhd": {
              "uri": "[concat('http://', parameters('newStorageAccountName'), '.blob.core.windows.net/', variables('ArGISDataServersStorageAccountContainerName'), '/', variables('ArGISDataServersOSDiskName'), copyindex(),'.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat('DataNic',copyindex()))]"
            }
          ]
        }
      },
      "resources": [
        
      ]

    },

     {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(concat(parameters('DataServersName'), copyindex()),'/', 'CustomScriptExtension')]",
            "copy": {
              "name": "virtualMachineLoop",
              "count": "[variables('numberOfInstances')]"
            },
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', concat(parameters('DataServersName'), copyindex()))]"
            ],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "[variables('customScriptExtensionVersion')]",
                "settings": {
                    "fileUris": [ "[variables('scriptURL')]" ],
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -file ',variables('scriptName'),' ',variables('scriptArgs'),' -ServerType DataServer')]"
                }
            }
        },

    {
      "name": "[concat(parameters('ServersName'), copyindex())]",
      "copy": {
        "name": "virtualMachineLoop",

      ],
      "tags": {
        "displayName": "ArGISServers"
      },
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets','ArGISServerAS')]"
        },
        "hardwareProfile": {
          "vmSize": "[variables('ArGISServersVmSize')]"
        },
        "osProfile": {
          "computername": "[concat(parameters('ServersName'), copyIndex())]",
          "adminUsername": "[parameters('AdminUsername')]",
          "adminPassword": "[parameters('AdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('ArGISServersImagePublisher')]",
            "offer": "[variables('ArGISServersImageOffer')]",
            "sku": "[parameters('ServersWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat('ArGISServersOSDisk',copyIndex())]",
            "vhd": {
              "uri": "[concat('http://', parameters('newStorageAccountName'), '.blob.core.windows.net/', variables('ArGISServersStorageAccountContainerName'), '/', variables('ArGISServersOSDiskName'), copyindex(),'.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat('ServerNic',copyindex()))]"
            }
          ]
        }
      }
    },
    {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(concat(parameters('ServersName'), copyindex()),'/', 'CustomScriptExtension')]",
            "copy": {
              "name": "virtualMachineLoop",
              "count": "[variables('numberOfServerInstances')]"
            },
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', concat(parameters('ServersName'), copyindex()))]"
            ],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "[variables('customScriptExtensionVersion')]",
                "settings": {
                    "fileUris": [ "[variables('scriptURL')]" ],
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -file ',variables('scriptName'),' ',variables('scriptArgs'),' -ServerType Server')]"
                }
            }
        },
    {
      "name": "[concat(parameters('PortalServersName'), copyindex())]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[variables('numberOfInstances')]"
      },
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-05-01-preview",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', 'PortalNic', copyindex())]",
        "[concat('Microsoft.Compute/availabilitySets/', 'ArGISPortalAS')]"
      ],
